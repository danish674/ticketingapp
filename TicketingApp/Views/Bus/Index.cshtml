@model IEnumerable<TicketingApp.ViewModels.BusViewModels.DetailsBusVM>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Bus Information</h2>
        <a href="@Url.Action("Create", "Bus")" class="btn btn-primary">Create</a>
    </div>


    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number</th>
                <th>Model</th>
                <th>Capacity</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var bus in Model)
            {
                <tr>
                    <td>@bus.Name</td>
                    <td>@bus.Number</td>
                    <td>@bus.Model</td>
                    <td>@bus.Capacity</td>
                    <td>
                        @if (bus.IsActive)
                        {
                            <span style="color: green;">&#10004;</span> <!-- Tick mark --> }
                        else
                        {
                            <span style="color: red;">&#10006;</span> <!-- Cross mark -->}
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Bus", new { id = bus.BusId })" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            let table = new DataTable('#example')
        });
    </script>
}
